{
  "name": "fa2-template",
  "version": "1.0",
  "license": "MIT",
  "description": "FA2 contract template",
  "scripts": {
    "clean": "rm -rf ./build ./contracts/compiled",
    "pre-compile": "ts-node scripts/cli.ts compile -c tez_store -o contracts/compiled",
    "compile": "ts-node scripts/cli.ts compile -f json",
    "full-compile": "yarn clean && yarn compile",
    "migrate": "yarn compile && ts-node scripts/cli.ts migrate",
    "migrate-mainnet": "yarn compile && ts-node scripts/cli.ts migrate -n mainnet",
    "test": "ts-mocha --paths test/tests/*.spec.ts --bail"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "dependencies": {
    "@taquito/michelson-encoder": "^12",
    "@taquito/rpc": "^12",
    "@taquito/signer": "^12",
    "@taquito/taquito": "^12",
    "@types/expect": "^24.3.0",
    "@types/mocha": "^9.0.0",
    "assert": "^2.0.0",
    "chai": "^4.3.4",
    "chai-bignumber": "^3.0.0",
    "child_process": "^1.0.2",
    "csv-parse": "^5.0.4",
    "dotenv": "^16.0.0",
    "fs": "^0.0.1-security",
    "jest": "^27.5.1",
    "mocha": "^9.1.2",
    "ts-mocha": "^8.0.0",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3",
    "yargs": "^17.2.1"
  },
  "keywords": [
    "tezos",
    "ligo",
    "blockchain"
  ],
  "devDependencies": {
    "@types/jest": "^27.4.1"
  }
}
